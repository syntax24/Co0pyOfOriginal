<div class="row">

    <div class="col-sm-12">
        <div class="panel-group panel-group-joined" id="accordion-test">

            <div class="panel panel-default" style="border-radius: 15px !important;">
                <div class="panel-heading" style="background-color: #545353 !important">
                    <h4 class="panel-title" style="color: #edebeb !important; display: inline;">
                        <a data-toggle="collapse" data-parent="#accordion-test" href="#collapseOne" class="collapsed" style="display: inline;">
                            جستجوی گزارشات
                        </a>
                    </h4>

                </div>
                <div id="collapseOne" class="panel-collapse collapse in ">
                    <div class="panel-body" style="padding-top: 15px; padding-bottom: 15px;">
                        <div class="row">
                            <div class="col-sm-12">
                                <form class="form-inline" role="form" method="GET" name="search-theme-form" id="search-theme-form" autocomplete="off">
                                    <div class="form-group col-sm-12">
                                        <div class="row">
                                            <div class="col-sm-2 pull-right m-b-15">
                                                <select class="form-control select-city" asp-for="searchModel.ArchiveNo" style="width: 100%">
                                                    <option value="">شماره بایگانی</option>
                                                    
                                                    @foreach (var item in @Model.searchModel.ArchiveNo_FileClass_UserIdList)
                                                    {
                                                        <option value="@item.ArchiveNo">@item.ArchiveNo</option>
                                                    }

                                                </select>
                                            </div>
                                            <div class="col-sm-2 pull-right m-b-15">
                                                <select class="form-control select-city" asp-for="searchModel.FileClass" style="width: 100%">
                                                    <option value="">کلاسه پرونده</option>
                                                    
                                                    @foreach (var item in @Model.searchModel.ArchiveNo_FileClass_UserIdList)
                                                    {
                                                        <option value="@item.FileClass">@item.FileClass</option>
                                                    }

                                                </select>
                                            </div>
                                            <div class="col-sm-2 pull-right m-b-15">
                                                <select class="form-control select-city"  asp-for="searchModel.UserId" style="width: 100%">
                                                    <option value="0">اصیل دعوی</option>

                                                    @foreach (var item in @Model.searchModel.UsersList)
                                                    {
                                                        <option value="@item.Id">@item.FullName</option>
                                                    }

                                                </select>
                                            </div>
                                            <div class="col-sm-2 pull-right m-b-15">
                                                <select class="form-control select-city"  asp-for="searchModel.FileState_Id" style="width: 100%">
                                                    <option value="0">عملیات قابل انجام</option>

                                                    @foreach (var item in @Model.searchModel.FileStatesList)
                                                    {
                                                        <option value="@item.State">@item.Title</option>
                                                    }

                                                </select>
                                            </div>
                                            
                                            
                                        </div>

                                        <div class="row" style="margin-top: 15px">


                                            <div class="col-lg-9">
                                            </div>

                                            <div class="col-lg-3">
                                                <button type="submit" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" style="border-bottom-left-radius: 0px; border-top-left-radius: 0px; background-color: #950000; border-color: #950000; font-family: 'Web_Yekan' !important; margin-left: -3px"> <i class="fa fa-search" style="padding-left: 3px; font-size: 14px;"></i> جستجو</button>
                                                <a class="btn btn-info btn-rounded waves-effect waves-light m-b-5" style="border-bottom-right-radius: 0px; border-top-right-radius: 0px; background-color: #545353; border-color: #545353; font-family: 'Web_Yekan' !important;" asp-page="./Index">مشاهده همه</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-list" style="padding-left: 3px; font-size: 14px"></i> لیست گزارش ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>

                                    <th style=" font-size: 10px; text-align: center"> شماره بایگانی </th>
                                    <th style=" font-size: 10px; text-align: center"> کلاسه پرونده </th>
                                    <th style=" font-size: 10px; text-align: center"> موکل </th>
                                    <th style=" font-size: 10px; text-align: center"> طرف مقابل </th>
                                    <th style=" font-size: 10px; text-align: center"> عملیات قابل انجام </th>
                                    <th style=" font-size: 10px; text-align: center">  </th>
                                    <th style=" font-size: 10px; text-align: center">  </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 1; }
                                @foreach (var item in Model.viewModels)
                                {
                                    <tr style="@(item.IsExpired ? "background-color: #eb7070" : "")">
                                        <td> 
                                            <p>@i</p>    
                                        </td>
                                        <td>
                                            <p>@item.File.ArchiveNo</p>
                                        </td>
                                        <td>
                                            <p>@item.File.FileClass</p>
                                        </td>
                                        <td>
                                            <p>@item.File.ClientFullName</p>
                                        </td>
                                        <td>
                                            <p>@item.File.OppositePersonFullName</p>
                                        </td>
                                        <td>
                                            <p>@item.FileState.Title</p>
                                        </td>
                                        <td></td>
                                        <td>
                                            <a class="btn btn-primary btn-rounded waves-effect waves-light" onclick="SetAdditionalDeadline(@item.File_Id, @item.FileState_Id, 2)">2 روز</a>
                                            <a class="btn btn-primary btn-rounded waves-effect waves-light" onclick="SetAdditionalDeadline(@item.File_Id, @item.FileState_Id, 5)">5 روز</a>
                                            <a class="btn btn-primary btn-rounded waves-effect waves-light" onclick="SetAdditionalDeadline(@item.File_Id, @item.FileState_Id, 10)">10 روز</a>
                                        </td>
                                    </tr>
                                    i++;
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section Script {
    <script src="~/AdminTheme/assets/js/site4.js"></script>
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">

        $(document).ready(function() {
            $('#datatable').dataTable({
                "lengthMenu": [[25, 10, 50, 100, -1], [25, 10, 50, 100, "All"]]
            });

            $('#datatable2').dataTable({
                "lengthMenu": [[25, 10, 50, 100, -1], [25, 10, 50, 100, "All"]]
            });

            var URL = "";

        });

        function SetAdditionalDeadline(fileId, fileStateId, deadline)
        {
            const deadlines = [2, 5, 10];

            if(!deadlines.includes(deadline))
                return

            $.ajax({
            //contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            type: 'POST',
            url: '@Url.Page("./Alerts", "SetAdditionalDeadline")',
            headers: { "RequestVerificationToken": $('@Html.AntiForgeryToken()').val() },
            data: { 
                "File_Id" : fileId,
                "FileState_Id": fileStateId,
                "AdditionalDeadLine" : deadline },

            success: function (response) {
                console.log(response);
                if (response.isSuccedded) { 
                
                    $.Notification.autoHideNotify('success', 'top center', 'پیام سیستم ', response.message);
                    
                    setTimeout(function () {
                        window.location.reload();

                    }, 1000);
                }
                else
                    $.Notification.autoHideNotify('error', 'top center', 'پیام سیستم ', response.message);
            },
            failure: function (response) {
                console.log(5, response)
                alert("خطایی رخ داده است. لطفا با مدیر سیستم تماس بگیرید");
            }
        });
        }


        var listArray = [];

        @foreach (var item in @Model.searchModel.ArchiveNo_FileClass_UserIdList)
        {
                @:listArray.push({ ArchiveNo: @item.ArchiveNo, FileClass: "@item.FileClass", UserId: @item.UserId });
                
        }

        $('#searchModel_ArchiveNo').on('select2:select', function (e) {
          loadDataByArchiveNo()
        });

        $('#searchModel_FileClass').on('select2:select', function (e) {
          loadDataByFileClass()
        });
        
        $('#searchModel_UserId').on('select2:select', function (e) {
          loadDataByUserId()
        });

        function loadDataByArchiveNo() 
        {
            var archiveNo = $('#searchModel_ArchiveNo').val();

            if (archiveNo == "") {

                $("#searchModel_FileClass").val("").trigger('change');
                $("#searchModel_UserId").val(0).trigger('change');
                return;
            }
                

            for (var i = 0; i < listArray.length; i++) 
            {
                if (listArray[i].ArchiveNo == archiveNo) 
                {
                    $("#searchModel_FileClass").val(listArray[i].FileClass).trigger('change');
                    $("#searchModel_UserId").val(listArray[i].UserId).trigger('change');
                }
            }
        }
        

        function loadDataByFileClass() 
        {
            var fileClass = $('#searchModel_FileClass').val();

            if (fileClass == "") {

                $("#searchModel_ArchiveNo").val("").trigger('change');
                $("#searchModel_UserId").val(0).trigger('change');
                return;
            }

            for (var i = 0; i < listArray.length; i++) 
            {
                if (listArray[i].FileClass == fileClass) 
                {
                    $("#searchModel_ArchiveNo").val(listArray[i].ArchiveNo).trigger('change');
                    $("#searchModel_UserId").val(listArray[i].UserId).trigger('change');
                }
            }
        }
        
        function loadDataByUserId() 
        {
            var userId = $('#searchModel_UserId').val();

            //if (userId == 0) {

            //    $("#searchModel_ArchiveNo").val("").trigger('change');
            //    $("#searchModel_FileClass").val("").trigger('change');
            //    return;
            //}

            for (var i = 0; i < listArray.length; i++) 
            {
                if (listArray[i].UserId == userId) 
                {
                    $("#searchModel_ArchiveNo").val(listArray[i].ArchiveNo).trigger('change');
                    $("#searchModel_FileClass").val(listArray[i].FileClass).trigger('change');
                    return;
                }
            }

            $("#searchModel_ArchiveNo").val("").trigger('change');
            $("#searchModel_FileClass").val("").trigger('change');
            return;
        }

    </script>

    
}