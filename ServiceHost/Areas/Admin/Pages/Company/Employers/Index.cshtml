     <div class="col-md-12">
            <div permission="10213" class="panel panel-default">
                <div class="panel-heading" style="background-color: #364562;">
                    <h3 class="panel-title"><i class="fa fa-list" style="padding-left: 3px; font-size: 14px"></i> لیست کارفرما</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <table id="datatable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th style="font-size: 14px !important">#</th>
                                        

                                        <th style="font-size: 14px !important">نام حقیقی / نام حقوقی</th>


                                        <th style="font-size: 14px !important">کد ملی / شناسه ملی</th>
                                        @*<th>شمارهشناسنامه / شماره ثبت</th>*@
                                        <th class="thh" style="display: none"> شماره شناسنامه </th>
                                        <th class="thh" style="display: none"> شماره ثبت </th>
                                        <th style="font-size: 14px !important; width: 32% !important">عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Employers)
                                    {


                                        <tr>

                                            <td style="font-size: 14px !important; text-align: center">@i </td>
                                           

                                            <td style="font-family: 'Web_Yekan' !important; font-size: 14px !important;text-align: center">
                                                @if (item.IsLegal == "حقیقی")
                                                {
                                                    @item.FName
                                                    <span>&nbsp;</span>
                                                    @item.LName
                                                }
                                                else
                                                {
                                                    @item.LName
                                                }
                                            </td>


                                            <td style="font-family: 'IranText' !important; font-size: 14px !important; text-align: center">
                                                @if (item.IsLegal == "حقیقی")
                                                {
                                                    @item.Nationalcode
                                                }
                                                else
                                                {
                                                    @item.NationalId
                                                }

                                            </td>


                                            <td style="font-family: 'IranText' !important; font-size: 14px !important; display: none">@item.IdNumber</td>
                                            <td style="font-family: 'IranText' !important; font-size: 14px !important; display: none">@item.RegisterId</td>
                                            @{
                                                i++;
                                            }
                                            <td>
                                                @if (item.IsLegal == "حقیقی")
                                                {
                                                    <a permission="10214" class="btn btn-warning pull-right m-rl-5"
                                                       href="#showmodal=@Url.Page("./Index", "Edit", new {Id = item.Id})">
                                                        <i class="fa fa-edit"></i> ویرایش
                                                    </a>
                                                    <a permission="10215" class="btn btn-info pull-right m-rl-5"
                                                       href="#showmodal=@Url.Page("./Index", "Details", new {Id = item.Id})">
                                                        <i class="fa fa-edit"></i> جزئیات
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a permission="10214" class="btn btn-warning pull-right m-rl-5"
                                                       href="#showmodal=@Url.Page("./Index", "LegalEdit", new {Id = item.Id})">
                                                        <i class="fa fa-edit"></i> ویرایش
                                                    </a>
                                                    <a permission="10215" class="btn btn-info pull-right m-rl-5"
                                                       href="#showmodal=@Url.Page("./Index", "LegalDetails", new {Id = item.Id})">
                                                        <i class="fa fa-edit"></i> جزئیات
                                                    </a>
                                                }

                                                @if (item.IsActive)
                                                {
                                                    <a permission="10216" asp-page="./Index" asp-page-handler="DeActive" asp-route-id="@item.Id" class="btn btn-danger pull-right m-rl-5"> غیرفعال</a>
                                                }
                                                else
                                                {
                                                    <a permission="10216" asp-page="./Index" asp-page-handler="IsActive" asp-route-id="@item.Id" class="btn btn-success pull-right m-rl-5"> فعال</a>
                                                }

                                            </td>

                                        </tr>




                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
  
       
    

