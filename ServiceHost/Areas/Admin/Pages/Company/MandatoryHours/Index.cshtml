                                            @item.Shahrivar

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Mehr

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Aban

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Azar

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Dey

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Bahman

                                        </td>
                                        <td style="font-family: 'IranText' !important; font-size: 11px !important; text-align: center">
                                            @item.Esfand

                                        </td>



                                        @{
                                            i++;
                                        }
                                        <td>

                                            <a class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new {Id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>






                                        </td>

                                    </tr>




                                }



                            </tbody>
                        </table>
                    </div>
