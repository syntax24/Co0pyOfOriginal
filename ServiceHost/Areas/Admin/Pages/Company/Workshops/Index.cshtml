<div class="row">


    <div class="row">
        <div class="col-sm-12 m-r-10">

            <p class="pull-right" style="margin-right: 10px">
                <a permission="10310" id="btnPopModal" href="#showmodal=@Url.Page("/Company/Workshops/Index", "Create")" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" style=" background-color: #f5f5f5; border-color: #0f9500; font-family: 'Web_Yekan' !important; color: #0f9500 !important;  "> <i class="fa fa-user-plus" style="padding-left: 3px; font-size: 14px; color: #0f9500 !important "></i> ایجاد کارگاه جدید </a>

            </p>


        </div>
    </div>


    <div class="col-sm-12">
        <div permission="10311" class="panel-group panel-group-joined" id="accordion-test">



            <div class="panel panel-default" style="border-radius: 15px !important; background-color: #bed3ca">
                <div class="panel-heading" style="background-color: #465149 !important">
                    <h4 class="panel-title" style="color: #edebeb !important; display: inline; padding: 0px;">
                        <a data-toggle="collapse" data-parent="#accordion-test" href="#collapseOne" class="collapsed" style="display: inline;">
                            جستجوی کارگاه
                        </a>
                    </h4>
                    @*<span style="padding: 6px 5px 3px 26px; background-color: #62e62c; margin-right: 10px; border-radius: 5px;">
                            <i class="fa fa-list" style="color: #edebeb; font-size: 20px; position: absolute; margin-top: 1px;"></i>
                        </span>*@
                </div>
                <div id="collapseOne" class="panel-collapse collapse in ">
                    <div class="panel-body" style="padding-top: 15px; padding-bottom: 15px;">
                        @*===================================================================================================================*@




                        <div class="row">

                            <div class="col-sm-12">

                                <form class="form-inline" role="form" method="get" name="search-theme-form" id="search-theme-form" autocomplete="off">
                                    <div class="form-group col-sm-12">
                                        <div class="row">
                                            <div class="col-sm-4 pull-right">
                                                <label class="sr-only" asp-for="SearchModel.WorkshopName"></label>
                                                <input class="form-control inpt" asp-for="SearchModel.WorkshopName" placeholder="نام کارگاه " style="width: 100%">
                                            </div>
                                            <div class="col-sm-4 pull-right">
                                                <label class="sr-only" asp-for="SearchModel.ArchiveCode"></label>
                                                <input class="form-control inpt" asp-for="SearchModel.ArchiveCode" placeholder=" شماره بایگانی  " style="width: 100%">

                                            </div>
                                            <div class="col-sm-4 pull-right">
                                                <label class="sr-only" asp-for="SearchModel.InsuranceCode"></label>
                                                <input class="form-control inpt" asp-for="SearchModel.InsuranceCode" placeholder="کد کارگاهی بیمه " style="width: 100%">

                                            </div>



                                        </div>
                                        <hr style=" margin-top: 12px;margin-bottom: 12px;" />
                                        <div class="row">



                                            <div class="col-sm-4" dir="rtl">
                                                <div class="form-group" style="width: 100% !important; margin: 0 auto;">
                                                    @*<label class="sr-only" asp-for="SearchModel.ContractingPartyID"></label>*@
                                                    <select class="form-control select-city" asp-for="SearchModel.TypeOfContract" style="width: 100% !important">
                                                        <option value=""> نحوه انجام امور قرارداد </option>
                                                        <option value="a">
                                                            قرارداد و تصفیه حساب بصورت استاندارد
                                                        </option>
                                                        <option value="b">
                                                            قرارداد و تصفیه حساب بدون محاسبه سنوات
                                                        </option>
                                                        <option value="c">
                                                            قرارداد و تصفیه حساب بدون محاسبه عیدی
                                                        </option>
                                                        <option value="d">
                                                            قرارداد و تصفیه حساب بدون محاسبه عیدی و سنوات
                                                        </option>

                                                    </select>


                                                </div>

                                            </div>

                                            <div class="col-sm-4" dir="rtl">
                                                <div class="form-group" style="width: 100% !important; margin: 0 auto;">

                                                    <select class="form-control select-city" asp-for="SearchModel.ContractTerm" style="width: 100% !important">
                                                        <option value="">  مدت قرارداد </option>
                                                        <option value="1"> 1 ماهه </option>
                                                        <option value="2"> 2 ماهه </option>
                                                        <option value="3"> 3 ماهه </option>
                                                        <option value="6"> 6 ماهه </option>
                                                        <option value="12"> 1 ساله </option>



                                                    </select>


                                                </div>

                                            </div>

                                            <div class="col-sm-4" dir="rtl">
                                                <div class="form-group" style="width: 100% !important; margin: 0 auto;">
                                                    <label class="sr-only"></label>
                                                    <select class="form-control select-city" asp-for="SearchModel.EmployerId" asp-items="Model.Employers" style="width: 100% !important">
                                                        <option value="0"> کارفرما </option>

                                                    </select>


                                                </div>

                                            </div>



                                        </div>

                                        <div class="row" style="margin-top: 15px">


                                            <div class="col-lg-9">



                                                <label class="sr-only" asp-for="SearchModel.IsActiveString"></label>
                                                <select class="form-control" asp-for="SearchModel.IsActiveString" style="background-color: #dddddd; border-radius: 25px; border: 1px solid #bfbfbf;">
                                                    <option value=""> فعال  </option>
                                                    <option value="false"> غیرفعال</option>
                                                    <option value="both"> هردو</option>
                                                </select>


                                                @*<label class="sr-only" asp-for="SearchModel.IsActive"></label>
                                                    <select class="form-control" asp-for="SearchModel.IsActive"  style="background-color: #dddddd; border-radius: 25px; border: 1px solid #bfbfbf;">
                                                        <option value=""> نوع  </option>
                                                        <option [ngValue]="True"> فعال</option>
                                                        <option [ngValue]="False"> غیرفعال</option>
                                                    </select>*@
                                            </div>

                                            <div class="col-lg-3">
                                                <button type="submit" class="btn btn-success btn-rounded waves-effect waves-light m-b-5" style="border-bottom-left-radius: 0px; border-top-left-radius: 0px; background-color: #465149; border-color: #465149; font-family: 'Web_Yekan' !important; margin-left: -3px "> <i class="fa fa-search" style="padding-left: 3px; font-size: 14px;"></i> جستجو</button>
                                                <a class="btn btn-info btn-rounded waves-effect waves-light m-b-5" style="border-bottom-right-radius: 0px; border-top-right-radius: 0px; background-color: #545353; border-color: #545353; font-family: 'Web_Yekan' !important;" asp-page="./Index">مشاهده همه</a>
                                            </div>
                                        </div>



                                    </div>


                                </form>

                            </div>


                        </div>

                        @*==================================================================personal=====*@













                    </div>
                </div>
            </div>









        </div>
    </div>

    <div class="col-sm-12">
        <div permission="10312" class="panel panel-default">
            <div class="panel-heading" style="background-color: #465149">
                <h3 class="panel-title"><i class="fa fa-list" style="padding-left: 3px; font-size: 14px"></i> لیست کارگاه ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th style="width: 5% !important">#</th>

                                    <th style="font-size: 14px !important">شماره بایگانی</th>

                                    <th style="font-size: 14px !important">نام کارگاه</th>


                                    <th style="font-size: 14px !important">کد کارگاهی بیمه</th>
                                    @*<th>شمارهشناسنامه / شماره ثبت</th>*@
                                    <th class="thh" style="display: none"> شماره شناسنامه </th>
                                    <th class="thh" style="display: none"> شماره ثبت </th>
                                    <th style="font-size: 14px !important; width: 31% !important">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Workshops)
                                {


                                    <tr>

                                        <td style="font-size: 14px !important; text-align: center;">@i </td>
                                        <td style="font-size: 14px !important; text-align: center">@item.ArchiveCode </td>

                                        <td style="font-size: 14px !important; text-align: center;">
                                            @item.WorkshopFullName
                                        </td>


                                        <td style="font-family: 'IranText' !important; font-size: 14px !important; text-align: center;">
                                            @item.InsuranceCode

                                        </td>


                                        <td style="font-family: 'IranText' !important; font-size: 14px !important; display: none"></td>
                                        <td style="font-family: 'IranText' !important; font-size: 14px !important; display: none"></td>
                                        @{
                                            i++;
                                        }
                                        <td>

                                            <a permission="10314" class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new {Id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            <a permission="10315" class="btn btn-info pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Details", new {Id = item.Id})">
                                                <i class="fa fa-edit"></i> جزئیات
                                            </a>



                                            @if (item.IsActiveString == "true")
                                            {
                                                <a permission="10316" id="googleLink" asp-page="./Index" asp-page-handler="DeActive" asp-route-id="@item.Id" class="btn btn-danger pull-right m-rl-5 fff">غیرفعال</a>

                                            }
                                            else
                                            {
                                                <a permission="10316" asp-page="./Index" asp-page-handler="IsActive" asp-route-id="@item.Id" class="btn btn-success pull-right m-rl-5"> فعال</a>
                                            }

                                        </td>

                                    </tr>




                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

 

