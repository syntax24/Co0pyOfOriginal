                                    <td style="font-size: 14px !important; text-align: center">@item.OriginalTitle </td>
                                    <td style="font-size: 14px !important; text-align: center">@item.Subtitle </td>
                                    <td style="font-size: 14px !important; text-align: center">@item.Chapter </td>
                                    @{
                                        i++;
                                    }

                                    <td>

                                        <a permission="20114" class="btn btn-warning pull-right m-rl-5 rad"
                                           href="#showmodal=@Url.Page("./Index", "Edit", new {Id = item.Id})">
                                            <i class="fa faSize fa-edit"></i>
                                        </a>

                                        @if (item.IsActiveString == "true")
                                        {

                                            <a permission="20116" id="googleLink" asp-page="./Index" asp-page-handler="DeActive" asp-route-id="@item.Id" asp-route-url="@url" class="btn btn-danger pull-right m-rl-5 fff rad"><i class="fa faSize fa-trash"></i></a>

                                        }
                                        else
                                        {
                                            <a permission="20116" asp-page="./Index" asp-page-handler="IsActive" asp-route-id="@item.Id" asp-route-url="@url" class="btn btn-success pull-right m-rl-5 rad"><i class="fa faSize fa-rotate-left"></i> </a>
                                        }

